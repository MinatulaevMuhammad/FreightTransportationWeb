@using FreightTransportationWeb.Data.Enum
@using FreightTransportationWeb.ViewModels

@model DashboardViewModel

<h1 class="display-4 fw-normal">User Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="Create">Create Order</a>
<div class="album py-5 bg-light">
    <div class="container">
        @if (User.Identity.IsAuthenticated)
        {
            <h2 class="display-5 fw-normal">Созданные заказы</h2>
            <div class="row">
                @foreach (var item in Model.Orders)
                {
                    @if (item.OrderStatus == OrderStatus.Created)
                    {
                        <div class="col-sm">
                            <div class="card mb-4 box-shadow">
                            <div class="card-body">
                                <p class="card-text">@item.Package.Weight</p>
                                <p class="card-text">@item.Package.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Order" asp-action="Detail" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                         <a asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                          <a asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                        
                                    </div>
                                    <small class="text-muted">@item.OrderStatus</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
            </div>
            <h2 class="display-5 fw-normal">Заказы в процессе</h2>
            <div class="row">
                @foreach (var item in Model.Orders)
                {
                    @if (item.OrderStatus == OrderStatus.InProgress)
                    {
                        <div class="col-sm">
                            <div class="card mb-4 box-shadow">
                            <div class="card-body">
                                <p class="card-text">@item.Package.Weight</p>
                                <p class="card-text">@item.Package.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Order" asp-action="Detail" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                        <a asp-controller="Order" asp-action="Complete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Complete</a>
                                        
                                    </div>
                                    <small class="text-muted">@item.OrderStatus</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
            </div>
            <h2 class="display-5 fw-normal">Завершенные заказы</h2>
            <div class="row ">
                @foreach (var item in Model.Orders)
                {
                    @if (item.OrderStatus == OrderStatus.Finished)
                    {
                        <div class="col-sm">
                            <div class="card mb-4 box-shadow">
                            <div class="card-body">
                                <p class="card-text">@item.Package.Weight</p>
                                <p class="card-text">@item.Package.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Order" asp-action="Detail" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                        <a asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    </div>
                                    <small class="text-muted">@item.OrderStatus</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
            </div>
        }
    </div>
</div>